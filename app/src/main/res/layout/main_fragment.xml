<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/sorting_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_sorting"
        android:text="@string/sorting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_method_simple_iteration"
        android:text="@string/method_simple_iteration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_method_newton"
        android:text="@string/method_newton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>